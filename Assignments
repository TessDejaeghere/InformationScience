def onegrammer(file):
    with open(file, 'r') as corpus:
        text = corpus.read().split()
    freq = {}
    for word in text:
        word = word.lower()
        if word in freq:
            freq[word] += 1
        else: 
            freq[word] = 1
    result =[(k,v) for k, v in freq.items()]
    print(result)

onegrammer("corpus.txt")
